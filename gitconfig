[color]
    diff = auto
    status = auto
    branch = auto
    ui = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[merge]
    keepBackup = false
	tool = meld
[core]
    editor = vim
    pager = most
    excludesfile = ~/.gitignore_global
[alias]
    lol = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    lola = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --all
[init]
    templatedir = ~/.git_template
[push]
	default = simple
[hooks "php-sismo"]
	path = /usr/share/nginx/html/sismo.php
[hooks "junkchecker"]
	phrasesfile = .git/hooks/junkchecker/junk-phrases.sample
